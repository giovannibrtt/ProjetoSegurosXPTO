<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/gallery_thumb"
    android:backgroundTint="#4F46E5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/fredoka_medium"
        android:text="Seguros XPTO"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18sp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fredoka_medium"
        android:text="Serviços"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="#4F46E5"
            android:fontFamily="@font/fredoka_medium"
            android:gravity="center"
            android:padding="16dp"
            android:text="Automóveis"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="#4F46E5"
            android:fontFamily="@font/fredoka_medium"
            android:gravity="center"
            android:padding="16dp"
            android:text="Imóveis"
            android:elevation="10dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18sp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fredoka_medium"
        android:text="Novidades"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16sp"
        android:background="#4F46E5"
        android:fontFamily="@font/fredoka_medium"
        android:padding="16dp"
        android:elevation="10dp"
        android:text="Desconto de 10% ao assinar esse mês" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16sp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/fredoka_medium"
        android:text="Precisa de ajuda?"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fredoka_medium"
        android:text="Ligue"
        android:elevation="20dp"/>


</LinearLayout>



